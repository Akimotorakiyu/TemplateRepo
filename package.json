{
  "name": "template-repo",
  "version": "0.0.0",
  "description": "ğŸ¬ A pnpm template repo, typescript support out of box with vite and jiti.",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.9.2",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "pretty-quick": "^4.2.2",
    "typescript": "5.9.3",
    "vitest": "4.0.5",
    "zx": "^8.8.5"
  },
  "scripts": {
    "prepare": "husky",
    "update-dependencies": "pnpm --recursive update",
    "update-dependencies-latest": "pnpm --recursive update --latest",
    "serve": "pnpm run serve-vue",
    "serve-vue": "pnpm --filter=./packages/vue run serve",
    "serve-react": "pnpm --filter=./packages/react run serve",
    "serve-micro": "pnpm --filter=./packages/micro-app run serve",
    "serve-nuxt": "pnpm --filter=./packages/nuxt run serve",
    "build": "pnpm --filter=./packages/vue run build",
    "dev": "pnpm --filter=./packages/node run dev",
    "test": "vitest --run"
  },
  "keywords": [],
  "author": "Akimotorakiyu",
  "license": "MIT",
  "dependencies": {
    "@commitlint/types": "^20.0.0",
    "lint-staged": "^16.2.6"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
